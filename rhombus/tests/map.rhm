  check m === n ~is #true

block:
  let m = MutableMap{1: "a", 2: "b"}
  let n = m.snapshot()
  check m == n ~is #false
  check m.snapshot() == n ~is #true
  check m.snapshot() === n ~is #false

check:
  use_static
  class Posn(x, y)
  def map :: Map.of(List, Posn):
    {[#'foo]: Posn(1, 2), [1]: Posn(3, 4), [Box(2)]: Posn(4, 5)}
  for Set ((key, val): map):
    key.length() + val.y
  ~is {3, 5, 6}

check:
