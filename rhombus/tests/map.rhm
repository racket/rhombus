block:
  let m = MutableMap{1: "a", 2: "b"}
  let n = m.copy()
  check m is_now n ~is #true
  check m == n ~is #false
  m[2] := "a"
  n[1] := "b"
  check m ~is_now MutableMap{1: "a", 2: "a"}
  check n ~is_now MutableMap{1: "b", 2: "b"}

block:
  let m = {1: "a", 2: "b"}
