#lang rhombus

use_static
  
check:
  class Posn(x, y):
    export: origin
  def origin = Posn(0, 0)
  def p = Posn.origin
  [p.x, p.y]
  ~is [0, 0]

check:
  interface Pointable:
    fun zero(): 0
    export: zero
  Pointable.zero()
  ~is 0

check:
  ~eval
  class Posn(x, y):
    def x = 10
    export: x
  ~raises "conflicts with field name"

check:
  ~eval
  class Posn(x, y):
    method dist(): x+y
    def dist = 10
    export: dist
  ~raises "conflicts with method name"

check:
  ~eval
  interface Pointable:
    method zero(): 0
    def zero = 0
    export: zero
  ~raises "conflicts with method name"
