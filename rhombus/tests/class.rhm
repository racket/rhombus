check:
  import rhombus/meta open
  class Posn(x, y):
    nonfinal
    internal _Posn
    // external view flips `y` and `x`
    constructor:
      fun (y, x):
        _Posn(x, y)
    binding:
      rule
      | '()($y, $x)':
          '_Posn($x, $y)'
      | '()($v)':
          '_Posn($v, 0)'
    annotation:
      rule
      | '().of($x, $y)':
          '_Posn.of($y, $x)'
      | '()': '_Posn'    
  def p = Posn(0, 2)
  def Posn(yy, xx) = p
  def Posn(a) = p    
  [p.y, p.x, yy, xx, a,
   p is_a Posn,
   Posn(1, "2") is_a Posn.of(Integer, String)]
  [0, 2, 0, 2, 2,
   #true,
   #true]

