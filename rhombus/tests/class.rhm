check:
  fun lookup_specs(make, model): [12, 25]
  class Car(make, model, private mpg):
    private field gas = 0
    constructor(make, model):
      def [tank_size, mpg] = lookup_specs(make, model)
      def car: super(make, model, mpg)
      car.gas := tank_size
      car
    method go(dist):
      gas := gas - dist/mpg
      gas
  def c = Car("Mazda", "Miata")
  c.go(100)
  8

