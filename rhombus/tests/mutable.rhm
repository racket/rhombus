#lang rhombus

check:
  def mutable x = 0
  [x := 1, x]
  ~is [#void, 1]

check:
  let x = 0
  fun f(): x
  let x = 2
  [x, f()]
  ~is [2, 0]

check:
  let x = 0
  fun f(): x
  let mutable x = 2
  x := 3
  [x, f()]
  ~is [3, 0]

check:
  let mutable x = 0
  fun f(): x
  fun g(n): x := n
  let mutable x = 2
  g(3)
  [x, f()]
  ~is [2, 3]

block:
  use_static
  class Posn(x, y)
  def mutable p :: Posn = Posn(1, 2)
  check:
    p.x ~is 1
    p := 100 ~raises "value does not satisfy annotation"
    p.x ~is 1
    p := Posn(4, 5) ~completes
    p.x ~is 4

block:
  use_static
  class Posn(x, y)
  def mutable p :~ Posn = Posn(1, 2)
  check:
    p.x ~is 1
    p := 100 ~completes
    p ~is 100
    p.x ~raises "contract violation"

block:
  def mutable i :: Int = 10
  check:
    i := "no" ~raises "value does not satisfy annotation"
    i ~is 10
    i := 11 ~completes
    i ~is 11

block:
  import lib("racket/base.rkt")
  def mutable str :: ReadableString.to_string = "apple"
  check:
    str := 10 ~raises "value does not satisfy annotation"
    str ~is "apple"
    str := base.#{string-copy}("banana") ~completes
    str ~is "banana"
