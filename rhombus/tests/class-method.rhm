check:
  class Posn(x, y):
    nonfinal
    method a(): 1
    method b(): 2
    method c(): 3
  class Posn3D(z):
    extends Posn
    nonfinal
    override a(): [super.a()]
    override c(): [super.b()]
  def p = Posn3D(1, 2, 3)
  [p.a(), p.b(), p.c(),
   Posn.a(p), Posn.b(p), Posn.c(p)]
  ~is [[1], 2, [2],
       [1], 2, [2]]

