check:
  use_dynamic
  class Posn(x, y):
    method m0(): [y, x]
  def p = Posn(1, 2)
  [dynamic(p).x,
   dynamic(p).m0 +& "",
   dynamic(p).m0()]
  ~is [1,
       "#<function:m0>",
       [2, 1]]

