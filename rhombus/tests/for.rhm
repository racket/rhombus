#lang rhombus

block:
  def mutable accum = []
  check:
    for:
      each i: 0..2
      accum := ConsList.cons(i, accum)
    accum
    ~is [1, 0]
  check:
    for (i: 0..2):
      accum := ConsList.cons(i + 10, accum)
    accum
    ~is [11, 10, 1, 0]

check:
  for ConsList:
    each i: 0..2
    i
  ~is [0, 1]

check:
  for ConsList (i: 0..2):
    i
  ~is [0, 1]

check:
  for Map:
    each i: 0..2
    values(i, "" +& i)
  ~is {0: "0", 1: "1"}

check:
