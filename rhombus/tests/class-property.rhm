#lang rhombus
import: "check.rhm" open

use_static

begin:
  class Posn(x, y):
    property
    | is_origin():
        x == 0 && y == 0
    | is_origin(at):
        if (if at | is_origin() | !is_origin())
        | #void
        | "no!"
    method is_at_origin():
      is_origin()
    method at_this_origin():
      this.is_origin
    final property is_origin_dont_ask_again():
      is_origin()
  check:
    val p: Posn(1, 2)
    [p.is_origin,
     p.is_at_origin(),
     p.at_this_origin(),
     Posn.is_origin(p),
     Posn.is_at_origin(p),
     p.is_origin_dont_ask_again,
     p.is_origin := "somewhere"]
    [#false, #false, #false, #false, #false, #false,
     "no!"]
  check:
    use_dynamic
    [dynamic(Posn(0, 0)).is_origin,
     dynamic(Posn(0, 0)).is_at_origin(),
     begin:
       val proc: Posn(0, 1).is_at_origin
       proc(),
     dynamic(Posn(0, 0)).is_origin_dont_ask_again]
    [#true, #true, #false, #true]

begin:
  class Posn(x, y):
    nonfinal
    internal _Posn
    property is_origin():
      x == 0 && y == 0
  class Posn3D(z):
    extends Posn
    override property is_origin():
      z == 0 && super.is_origin()
  check:
    val p: Posn3D(0, 0, 0)
    [p.is_origin,
     begin:
       use_dynamic
       dynamic(p).is_origin,
     (_Posn(1, 2)).is_origin]
    [#true, #true, #false]
    
