// Protected implementation
check:
  interface I:
    method m()
  class C():
    nonfinal
    protected implements: I
    override m(): 1
  class D():
    extends C
    method n():
      m()
  [D().n(),
   try:
     use_dynamic
     dynamic(D()).m()
     ~catch x:
       "ok"]
  ~is [1,
       "ok"]

