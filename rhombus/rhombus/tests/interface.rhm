// overlap of private and public is public
check:
  interface Stool:
    internal _Stool
    abstract legs
    abstract seat
  interface Cow:
    abstract legs
    abstract horns
  class MilkShed():
    private implements Stool
    implements Cow
    override legs(): 4
    override horns(): 2
    private override seat(): 1
  def m = MilkShed()
  check:
    (m :~ Stool).seat()
    ~throws "Stool"
  [m is_a Stool,
   m is_a _Stool,
   m is_a Cow,
   m.legs(),
   m.horns(),
   (m :~ _Stool).seat()]
  ~is [#false, #true, #true,
       4, 2, 1]

