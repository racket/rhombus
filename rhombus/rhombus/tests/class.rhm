block:
  import rhombus/meta open
  class Posn(x, y):
    nonfinal
    internal _Posn
    // external view flips `y` and `x`
    constructor:
      fun (y, x):
        _Posn(x, y)
    binding:
      macro
      | '()($y, $x)':
          '_Posn($x, $y)'
      | '()($v)':
          '_Posn($v, 0)'
    annotation 'Posn': '_Posn'
    annot.macro 'of($x, $y)':
      '_Posn.of($y, $x)'
    export: of
  def p = Posn(0, 2)
  def Posn(yy, xx) = p
  def Posn(a) = p
  check:
    [p.y, p.x, yy, xx, a,
     p is_a Posn,
     Posn(1, "2") is_a Posn.of(Int, String)]
    ~is [0, 2, 0, 2, 2,
         #true,
         #true]

