  syntax_class Option:
    kind: ~term
  | '~lang':
      field form: '~lang'
  match '(~lang, ~lang)'
  | '($(o :: Option), ...)': [o.form]
  ~throws "field is a repetition"

check:
  ~eval
  syntax_class Option
  | '~lang':
