// check interaction of macro introduction and pattern variables
block:
  import rhombus/meta open
  check:
    expr.macro 'matcher $(ex :: Term)':
      '«match '1 2'
        | (pattern | '$('$')x $('$')$ex'): x»'
    matcher x
    ~matches '1'
  check:
    expr.macro 'matcher $(ex :: Term)':
      '«match '1 2'
        | (pattern | '$('$')x $('$')$ex'): $ex»'
    matcher x
    ~matches '2'
  version_guard.at_least "8.10":
    check:
      expr.macro 'matcher $(ex :: Term)':
        '«match '1 2'
          | (pattern | '$('$')$ex $('$')x'): x»'
      matcher x
      ~matches '2'
    check:
      expr.macro 'matcher $(ex :: Term)':
        '«match '1 2'
          | (pattern | '$('$')$ex $('$')x'): $ex»'
      matcher x
      ~matches '1'

