// check generated attributes in inline `pattern`s
block:
  fun m(stx):
    match stx
    | (pattern
       | '$_ $_': field one = 1; field two = 2
       | '$_': field two = 1):
        two
  check:
    m('foo')
    ~is 1
  check:
    m('foo bar')
    ~is 2

block:
  fun m(stx):
    syntax_class Rhs:
      kind ~sequence
    | '= $_ ...'
    match stx
    | (pattern
       | '$lhs ... $(rhs :: Rhs)'
       | '$lhs ...: $(rhs :: Block)'):
        '($lhs ..., $rhs)'
  check:
    m('foo bar = baz')
    ~matches '(foo bar, = baz)'
  check:
    m('foo bar: baz')
    ~matches '(foo bar, :« baz »)'

