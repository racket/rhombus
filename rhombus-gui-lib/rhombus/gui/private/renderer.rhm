#lang rhombus/static/and_meta
import:
  lib("racket/gui/easy.rkt")
  "view.rhm".WindowView

export:
  render
  Renderer

class Renderer(private _handle):
  internal _Renderer
  expression ~none
  property handle: _handle
  export:
    from_handle
  fun from_handle(handle) :~ Renderer:
    _Renderer(handle)

fun render(view :: WindowView,
           parent :: maybe(Renderer) = #false) :: Renderer:
  _Renderer(easy.render(view.handle, parent?.handle))
